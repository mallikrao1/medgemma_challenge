{
  "aliases": {
    "apigw": "apigateway",
    "opensearch-domain": "opensearch"
  },
  "services": {
    "opensearch": {
      "identifier_keys": ["domain_name", "name"],
      "endpoint_keys": ["dashboard_url"],
      "endpoint_templates": [
        "https://{endpoint}",
        "https://{domain_name}.{region}.es.amazonaws.com"
      ],
      "phase_hints": {
        "deploy_completed_actions": ["create", "update"],
        "deploy_detail": "OpenSearch endpoint configured.",
        "actions": {
          "create": {
            "health_detail": "OpenSearch domain may take several minutes to become active."
          }
        }
      },
      "status_hints": {
        "status_keys": ["domain_status", "processing_state"],
        "pending_values": ["processing", "modifying"],
        "ready_values": ["active", "available"]
      }
    },
    "eventbridge": {
      "identifier_keys": ["event_bus_name", "name"],
      "phase_hints": {
        "deploy_completed_actions": ["create", "update"],
        "deploy_detail": "EventBridge resources configured."
      }
    }
  }
}
